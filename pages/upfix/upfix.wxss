/* pages/fd_cz/fdcz.wxss */
page{
  height:100%;
  background: rgb(248,248,248);
}
.container{
  width:100%;
  height:100%;
  /* background: rgb(248,248,248); */
  background-color: white;
  overflow: hidden
}
.topPic{
  width:82%;
  margin:0 auto;
  margin-top:60rpx;
  display:block;
  height:3.5%;
}
.topFont{
  width:100%;
  height:40rpx;
}
.one{
  width:33.3%;
  height:40rpx;
  float:left;
  text-align: center;
  line-height: 40rpx;
  font-weight: 300;
  font-size: 24rpx;
  color:#333333;
  letter-spacing: 1rpx;
}
.title{
  width:100%;
  height:80rpx;
  font-size:38rpx;
  font-weight: 900;
  text-align: center;
  text-indent: 40rpx;
  color:#333333;
  margin-top:60rpx;
  letter-spacing: 2rpx;
}
.sigleInput{
  width:90%;
  height:100rpx;
  margin:0 auto;
  border-bottom:2rpx solid rgb(234,234,234);
  display: flex;
  align-items: center
}

#textArea-box {
  height: 220rpx;
}

.left{
  width:30%;
  text-align: left;
  font-size: 32rpx;
  color:#333333;
  letter-spacing: 2rpx;
  line-height: 80rpx;
  font-weight: 700;
}
.left::before {
  content: '* ';
  color: red;
}
.right{
  width:70%;
  height:80rpx;
  float:left;
  overflow: hidden;
}
#right-textArea{
  height: 180rpx;
}
.right-button {
  width: 200rpx;
  color: rgb(173, 173, 173);
  background-color: rgb(247, 247, 247);
  font-size: 32rpx;
}
.flex-1{
  flex: 1;
}
.input{
  outline: none;
  background: none;
  display:block;
  width:95%;
  height: 100%;
  font-size:30rpx;
  color: rgb(183, 183, 183);
}
.middle{
  flex: 1;
}

.newRightPic{
  width:30rpx;
  height:30rpx;
}
.picker{
  width:100%;
  text-align: left;
  font-size:30rpx;
  color:rgb(147,134,130);
}
.otherInput{
  width:100%;
  height:100%;
  display: block;
  outline: none;
  background:rgb(245, 245, 245);
  border-radius: 10rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  padding: 8rpx;
}


.btn{
  width:88%;
  height:100rpx;
  background: rgb(255,217,62);
  letter-spacing: 2rpx;
  text-align: center;
  line-height: 100rpx;
  font-size:30rpx;
  font-weight: 699;
  border-radius: 6rpx;
  margin:80rpx auto;
}
.picBox{
  width:90%;
  height:400rpx;
  margin:0 auto;
  border-radius: 6rpx;
  background:rgb(245, 245, 245);
}
.picBox_pic{
  position: relative;
  width:100%;
  height:100%;
  display: block;
  
}