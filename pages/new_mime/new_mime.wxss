/* pages/new_mime/new_mime.wxss */
page {
  height: 100%;
}
.container {
  width: 100%;
  overflow: hidden;
}
.topBox{
  width:100%;
  height:240rpx;
  background:#ffc000;
}
.nameBox{
  width:100%;
  height:50rpx;
  font-size:40rpx;
  text-align: center;
  line-height: 50rpx;
  color:#333333;
  margin-top:80rpx;
}
.telBox{
  width:100%;
  height:48px;
  font-size:34rpx;
  text-align: center;
  line-height: 48rpx;
  color:#c6c6c6;
}
.headPic{
  box-sizing: border-box;
  width:180rpx;
  height:180rpx;
  position: absolute;
  top:240rpx;
  margin-top: -120rpx;
  left: 50%;
  margin-left: -90rpx;
  border:20rpx solid white;
  border-radius: 50%;
}
.barBox{
  width:90%;
  height:240rpx;
  margin: 0 auto;
  margin-top:40rpx;
  box-shadow: 0 4rpx 10rpx rgb(240,240,240);
}
.barBox_son{
  width:33.3%;
  height:100%;
  float:left;
  
}
.barBox_son_pic{
  width:120rpx;
  height:120rpx;
  margin: 0 auto;
  margin-top:40rpx;
  display: block;
}
.barBox_son_font{
  width:100%;
  height:40rpx;
  text-align: center;
  line-height: 40rpx;
  margin-top:20rpx;
  font-size:28rpx;
  color:#4d4d4c;
  letter-spacing: 1rpx;
}
.btnBox{
  width:90%;
  margin:40rpx auto;
  padding-bottom: 10rpx;
  box-shadow: 0 4rpx 10rpx rgb(240,240,240);
}
.btnBox_son{
  width:90%;
  margin:0 auto;
  height:120rpx;
}
.btnBox_son_font{
  width:50%;
  height:120rpx;
  color:#333333;
  font-weight: 28rpx;
  letter-spacing: 2rpx;
  line-height: 120rpx;
  float:left;
}
.btnBox_son_pic{
  width:32rpx;
  height:32rpx;
  float:right;
  margin-top:44rpx;
}

/* 联系客服弹窗css代码 */
.concatBox{
  width:100%;
  height:100%;
  background: rgba(187, 187, 187, 0.31);
  position: fixed;
  top:0;
  left:0;
  z-index: 100
}
.concatBox_sonBox{
  width:560rpx;
  height:300rpx;
  /* background: red; */
  margin:0 auto;
  background: white;
  border-radius: 8rpx;
}
.concatBox_sonBox_top{
  width:100%;
  height:212rpx;
  border-radius: 8rpx 8rpx 0 0;
  overflow: hidden;
}
.concatBox_sonBox_bottom{
  width:100%;
  height:80rpx;
  display: flex;
  /* background: green; */
  border-radius: 0 0 8rpx 8rpx;
}
.concatBox_sonBox_top_top{
  width:100%;
  height:52rpx;
  line-height: 52rpx;
  text-align: center;
  color:#000000;
  font-size:36rpx;
  margin-top:48rpx;
}
.concatBox_sonBox_top_bottom{
  width:100%;
  height:52rpx;
  line-height: 52rpx;
  text-align: center;
  color:#888888;
  font-size:36rpx;
}
.concatBox_sonBox_bottom_left{
  /* width:240rpx; */
  height:80rpx;
  flex: 1;
  border-top:2rpx solid rgba(187, 187, 187, 0.31);
  border-right:2rpx solid rgba(187, 187, 187, 0.31);
  font-size:36rpx;
  text-align: center;
  line-height: 80rpx;
  color:black;
  float:left;
}
.concatBox_sonBox_bottom_right{
  /* width:280rpx; */
  flex: 1;
  height:80rpx;
  border-top:2rpx solid rgba(187, 187, 187, 0.31);
  font-size:36rpx;
  text-align: center;
  line-height: 80rpx;
  color:#02BB00;
  float:left;
}