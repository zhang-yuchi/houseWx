/* pages/liveserver/liveserver.wxss */
page {
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.searchBox{
  width:94%;
  height:120rpx;
  margin:0 auto;
  box-shadow: 0 0 20rpx rgb(240,240,240);
  border-radius: 6rpx;
}
.searchpic{
  width:40rpx;
  height:40rpx;
  display: block;
  margin-top:40rpx;
  margin-left:30rpx;
  float:left;
}
.input{
  height:80rpx;
  display: block;
  outline: none;
  font-size:28rpx;
  font-weight: 500;
  background: none;
  float:left;
  margin-top:20rpx;
  padding-left:30rpx;
  letter-spacing: 1rpx;
}
.barBox{
  width:94%;
  height:120rpx;
  margin:0 auto;
  border-bottom:2rpx solid rgb(240,240,240)
}
.barBox_son{
  width:20%;
  height:60rpx;
  /* background: red; */
  float:left;
  margin-top:30rpx;
  font-size:28rpx;
  letter-spacing: 2rpx;
  color:rgb(153,153,153);
  text-align: center;
  line-height: 60rpx;
}
