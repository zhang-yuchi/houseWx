.teseBox_text{
  width:100%;
  height:40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 28rpx;
  color:#101010;
}
.teseBoxTitle{
  width: 90%;
  height: 50rpx;
  margin: 0 auto;
  font-size: 36rpx;
  font-weight: 900;
  line-height: 50rpx;
  margin-top:60rpx;
  margin-bottom:20rpx;
}