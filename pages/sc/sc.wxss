  width: 100%;
  height: 100%;
  overflow: hidden;
}
.infoBox {
  width: 95%;
  height: 130px;
  margin: 0 auto;
  margin-top:10px;
  /* background: green; */
}

.infoBox_son_pic {
  width: 37%;
  height: 130px;
  display: block;
  float: left;
  
}

