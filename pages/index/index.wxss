/* pages/index/index.wxss */

page {
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  overflow: hidden;
  /* padding-bottom:20px; */
}

/* 滚动图样式 */

.banner {
  width: 100%;
  margin: 0 auto;
  background: rgb(245, 245, 245);
  height: 25.5%;
  margin-top: 3px;
}

.banner_son {
  width: 100%;
  height: 100%;
  margin: 0 auto;
}

.swiper {
  height: 100%;
  width: 100%;
}

.swiper image {
  height: 100%;
  width: 100%;
}

/* 顶部搜索样式 */

.searchBox {
  width: 100%;
  height: 40px;
  /* background: red; */
  overflow: hidden;
}

.city {
  width: 80px;
  height: 40px;
  float: left;
  font-size: 17px;
  font-weight: 800;
  line-height: 40px;
  text-align: center;
  text-indent: 15px;
}

.cityIcon {
  width: 40px;
  height: 40px;
  float: left;
}

.searchBox_input {
  height: 40px;
  float: left;
  background: #f6f6f6;
  border-radius: 40px;
}

.indexdown {
  width: 14px;
  height: 14px;
  display: block;
  margin-top: 15px;
  margin-left: 1px;
}

.searchpic {
  width: 14px;
  height: 14px;
  display: block;
  margin-top: 13.5px;
  margin-left: 10px;
  float: left;
}

.input {
  height: 35px;
  display: block;
  float: right;
  margin-top: 2.5px;
  font-size: 12px;
}

.itembox {
  width: 100%;
  height: 100px;
  /* background: red; */
  overflow: hidden;
}

.itembox_son {
  height: 90px;
  float: left;
  margin-top: 10px;
}

.itembox_son_pic {
  width: 70px;
  height: 70px;
  display: block;
  margin: 0 auto;
}
/* .itembox_son_pic:first-child{
  margin-left:10px;
}
.itembox_son_pic:last-child{
  margin-right:10px;
} */

.itembox_son_text {
  width: 100%;
  height: 20px;
  font-size: 12px;
  text-align: center;
  line-height: 20px;
  color: #a3a3a3;
}

.middle_check {
  width: 95%;
  height: 45px;
  margin: 0 auto;
  border-bottom: 1px solid rgb(245, 245, 245);
}

.middle_check_son {
  height: 45px;
  float: left;
  /* background: red; */
}

.middle_check_son_text {
  height: 45px;
  width: 25px;
  float: left;
  font-size: 12px;
  font-weight: 700;
  line-height: 45px;
}

.middle_check_son_pic {
  display: block;
  width: 8px;
  height: 8px;
  margin-top: 18.5px;
  float: left;
}

.middle_check_son_sx {
  width: 15px;
  height: 15px;
  display: block;
  margin: 15px auto;
}

.scrollView {
  /* background: red; */
}

.infoBox {
  width: 95%;
  height: 130px;
  margin: 0 auto;
  margin-top:10px;
  margin-bottom:10px;
  /* background: green; */
}

.infoBox_son_pic {
  width: 37%;
  height: 130px;
  display: block;
  float: left;
  
}

.infoBox_text {
  width: 60%;
  height: 130px;
  float: right;
  /* background: orange; */
}

.name {
  width: 100%;
  height: 30px;
  /* background: red; */
  font-size: 14px;
  font-weight: 700;
  line-height: 30px;
}

.price {
  width: 100%;
  height: 30px;
  /* background: green; */
  font-size: 16px;
  font-weight: 700;
  line-height: 30px;
  color:red;
}
.dis {
  width: 100%;
  height: 20px;
  /* background: pink; */
  font-size: 9px;
  line-height: 20px;
  color: rgb(140, 140, 140);
}
.sx {
  width: 100%;
  height: 50px;
  /* background: red; */
}
.sx_son{
  height:17px;
  /* background: orange; */
  border:1px solid rgb(140, 140, 140);
  border-radius: 17px;
  color:rgb(140, 140, 140);
  line-height: 17px;
  float:left;
  margin-top:17px;
  font-size:9px;
  text-align: center;
  letter-spacing: 2px;
}

.teseBox{
  width:96%;
  height:120px;
  /* background: red; */
  overflow: hidden;
  margin:0 auto;
}
.scrollX{
  height:120px;
  width: 100%;
  white-space: nowrap;
}
.teseBox_son{
  width:33.3%;
  height:100%;
  float:left;
}
