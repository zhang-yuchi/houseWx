/* pages/myorder/myorder.wxss */
page {
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.selectItem{
  width:100%;
  height:100rpx;
  box-shadow: 0 0 20rpx rgb(240,240,240);
}
.selectItem_son{
  width:50%;
  height:100%;
  float:left;
}
.son_text{
  width:100%;
  height:60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size:30rpx;
  color:#333333;
  letter-spacing: 2rpx;
  font-weight: 800;
  margin-top:14rpx;
}
.son_textC{
  width:100%;
  height:60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size:30rpx;
  color:gray;
  letter-spacing: 2rpx;
  font-weight: 800;
  margin-top:14rpx;
}
.son_text::after{
  content:"";
  width:40rpx;
  height:8rpx;
  display: block;
  background:rgb(255,217,62);
  position:relative;
  top:4rpx;
  left:50%;
  margin-left:-20rpx;
  border-radius: 4rpx;
}


.container-list{
  width: 95%;
  height: 200rpx;
  margin: 40rpx auto 0 auto;
  border-bottom: 1px solid rgb(248, 248, 248);
}





.infoBox{
  width:94%;
  height:240rpx;
  margin:0 auto;
  border-bottom:2rpx solid rgb(240,240,240);
}
.left{
  width:200rpx;
  height:200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  float:left;
}
.font{
  width:160rpx;
  height:40rpx;
  font-size:24rpx;
  color:gray;
  letter-spacing: 2rpx;
  text-align: center;
  line-height: 40rpx;
  margin-top: 10rpx;
}
.pic{
  display: block;
  width:110rpx;
  height:110rpx;
  border-radius: 20rpx;
}
.right{
  height:200rpx;
  float:left;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}
.right_son{
  width: 380rpx;
  height:60rpx;
  font-size:30rpx;
  color:rgb(42, 42, 42);
  text-align: left;
  line-height: 60rpx;
  letter-spacing: 2rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}