<!--pages/housedetail/housedetail.wxml-->
<View class="container">
  <scroll-view scroll-y="true" class="scrollView" style="width:100%;height:{{scrollViewHeight}}">
    <view class="shop-details-box">
      <image src="../../images/index_1.jpg" class="topPic" mode="aspectFill"></image>
      <view class="shop-details-name">
        美佳宜
        <view class="right">
          <image src="../../images/sc.png" class="right_top" mode="aspectFill" />
          <View class="right_bottom">收藏</View>
        </view>
      </view>
      <view class="shop-details">
        <view class="shop-details-time">
          营业时间：8:00-23:00
        </view>
        <view class="shop-details-addr">
          地址：雨城区东城街道四川农业大学第二教学区第十二教学楼
        </view>
      </view>
    </view>


    <view class="shop-details-box2">
      <view class="shop-details-title">商家详情</view>
      <!-- <image wx:for="{{}}"></image> -->
      <image src="../../images/index_3.jpg" class="topPic" mode="aspectFill" />
      <image src="../../images/index_1.jpg" class="topPic" mode="aspectFill" />
    </view>
  </scroll-view>
</View>

<View class="bottomBtn">
  <View class="bottom_left">
    <image src="../../images/share.png" class="bottom_left_pic" mode="aspectFill" />
    <View class="bottom_left_font">分享</View>
  </View>
  <View class="bottom_right">一键联系</View>
</View>