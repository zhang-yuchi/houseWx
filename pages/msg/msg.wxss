/* pages/msg/msg.wxss */
page {
  height: 100%;
}

.container {
  width: 100%;
  /* height: 100%; */
  overflow: hidden;
}
.infoBox{
  position: relative;
  width:90%;
  height:100rpx;
  /* background: red; */
  margin:0 auto;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f1f1f1;
}
.newmsg::before{
  position: absolute;
  background-color: red;
  width: 20rpx;
  height: 20rpx;
  content: "";
  border-radius: 50%;
  left: 60rpx;
  top: 27rpx;
  
}
.infoBox_pic{
  width:80rpx;
  height:80rpx;
  margin-top:10rpx;
  display: block;
  float:left;
}
.rightBox{
  width:120rpx;
  height:80rpx;
  font-size:24rpx;
  line-height: 80rpx;
  text-align: center;
  color:rgba(0, 0, 0, .54);
  float:right;
  margin-top:10rpx;
}
.middleBox{
  /* width:200rpx; */
  width: 400rpx;
  /* width: 70%; */
  height:100rpx;
  /* background: yellow; */
  float:left;
  margin-left:20rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.title{
  height:50rpx;
  font-size:30rpx;
  color:#101010;
  font-weight: 800;

}
.content{
  height:50rpx;
  font-size:28rpx;
  color:rgb(181, 181, 181);
  /* font-weight: 800; */
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}