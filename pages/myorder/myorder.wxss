/* pages/myorder/myorder.wxss */
page {
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.selectItem{
  width:100%;
  height:100rpx;
  box-shadow: 0 0 10px rgb(240,240,240);
}
.selectItem_son{
  width:50%;
  height:100%;
  float:left;
}
.son_text{
  width:100%;
  height:60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size:30rpx;
  color:#333333;
  letter-spacing: 2rpx;
  font-weight: 800;
  margin-top:14rpx;
}
.son_textC{
  width:100%;
  height:60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size:30rpx;
  color:gray;
  letter-spacing: 2rpx;
  font-weight: 800;
  margin-top:14rpx;
}
.son_text::after{
  content:"";
  width:40rpx;
  height:8rpx;
  display: block;
  background:rgb(255,217,62);
  position:relative;
  top:4rpx;
  left:50%;
  margin-left:-20rpx;
  border-radius: 4rpx;
}
.infoBox{
  width:94%;
  height:300rpx;
  margin:0 auto;
  /* background:green; */
  border-bottom:2rpx solid rgb(240,240,240)
}
.left{
  width:260rpx;
  height:260rpx;
  /* background:red; */
  margin-top:20rpx;
  float:left;
}
.pic{
  display: block;
  width:100%;
  height:100%;
  border-radius: 10rpx;
}
.right{
  height:260rpx;
  margin-top:20rpx;
  float:left;
}
.right_son{
  height:60rpx;
  font-size:32rpx;
  /* font-weight: 800; */
  color:#333333;
  text-align: left;
  margin-left:20rpx;
  line-height: 60rpx;
  margin-top:24rpx;
  letter-spacing: 2rpx;
}
.inner-block{
  border-bottom: 1rpx solid #f1f1f1;
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  /* justify-content: space-between; */
}
.houseimg{
  margin-right: 30rpx;
  width: 230rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.details-title{
  /* color:; */
  font-size: 34rpx;
  margin-bottom: 30rpx;

}
.details-date{
  font-size: 34rpx;
  margin-bottom: 30rpx;
  color: gray;
}
.starttime{
  font-size: 34rpx;
  color: gray;
}
