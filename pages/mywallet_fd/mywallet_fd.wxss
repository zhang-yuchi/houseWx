/* pages/mywallet_fd/mywallet_fd.wxss */
page{
  background-color: rgb(245, 245, 245);
  height: 100%;
}
.money-show{
  padding: 20rpx 50rpx;
  background-color: rgb(160, 154, 127);
  color: rgb(249, 248, 247);
  margin-bottom: 20rpx;
  font-size: 34rpx;
}
.money-show>view:first-of-type{
  margin-bottom: 20rpx;
}
.money-show>view{
  display: flex;
  justify-content: space-between;
}
.money-pull{
  display: flex;
  padding: 30rpx 50rpx;
  background-color: white;
  margin-bottom: 20rpx;
  align-items: center;
}
.money-pull text{
  width: 210rpx;
  display: inline-block;
}
.money-pull input{
  font-size: 34rpx;
}
.card-select{
  background-color: white;
  padding: 10rpx 50rpx;
  margin-bottom: 20rpx;
}
.card-entity{
  border-bottom: 4rpx solid rgb(246, 246, 246);
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
}
.add-card{
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
}
.add-pic{
  width: 50rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.bank-pic{
  margin-right: 20rpx;
  height: 45rpx;
  width: 45rpx;
  display: inline-block;
}
.money-controls{
  display: flex;
  align-items: center;
  /* justify-content: center; */
  background-color: white;
  padding: 10rpx 0rpx;
  margin-bottom: 170rpx;
}
.card-name{
  font-size: 30rpx;
  color: rgb(71, 71, 71);
}
.card-info{
  display: flex;
  align-items: center;
}
.toright{
  margin-right: 20rpx;
}
.left,.right{
  /* width: 200rpx; */
  /* padding: 60rpx; */
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.left image,.right image{
  width: 50rpx;
  height: 60rpx;
  margin-bottom: 37rpx;
}
.left{
  border-right: 2rpx solid rgb(242, 242, 242);
  /* padding-right: 60rpx; */
}

.submit-controls{
  position:fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  height: 160rpx;
  background-color: white;
}
.submit-btn{
  width: 80%;
  height: 100rpx;
  border-radius: 10rpx;
  line-height: 100rpx;
  text-align: center;
  margin-top: 20rpx;
  background-color: rgb(255, 217, 62)
}
.tips-cover{
  z-index: 99;
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0,0.5)
}
.tips-window{
  height: 480rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 70%;
  position: absolute;
  left: 50%;
  top: 20%;
  transform: translate(-50%);
}
.tips-window image{
  z-index: -1;
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
}
.tips-info{
  position: absolute;
  
}
.tips-btn{
  width: 75%;
  line-height: 100rpx;
  text-align: center;
  position: absolute;
  border-radius: 10rpx;
  bottom: 30rpx;
  background-color: rgb(255, 217, 62)
}