.box{
  width:94%;
  height:300rpx;
  /* background:yellow; */
  margin:0 auto;
  border-bottom: 1px solid rgb(153,153,153);
}
.left{
  width:260rpx;
  height:260rpx;
  float:left;
  margin-top:20rpx;
}
.left_pic{
  box-sizing: border-box;
  width:100%;
  height:100%;
  display: block;
  border-radius: 8rpx;
  padding: 20rpx;
}
.right{
  height:100%;
  float:left;
}
.right_first{
  height:60rpx;
  font-size:30rpx;
  color:#333333;
  text-align: left;
  text-indent: 30rpx;
  line-height: 60rpx;
  letter-spacing: 2rpx;
  margin-top:20rpx;
}
.right_second{
  width:140rpx;
  height:60rpx;
  background:rgb(255,242,191);
  font-size:32rpx;
  color:rgb(207,182,92);
  text-align: left;
  line-height: 60rpx;
  margin-top:20rpx;
  border-radius: 10rpx;
  margin-left:30rpx;
}
.right_third{
  height:80rpx;
  font-size:40rpx;
  text-align: left;
  line-height: 80rpx;
  letter-spacing: 2rpx;
  text-indent: 30rpx;
  margin-top:20rpx;
}
