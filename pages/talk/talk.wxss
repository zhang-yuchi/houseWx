/* pages/talk/talk.wxss */
page{
  background-color: rgb(245, 245, 245);
  height: 100%;
}
.talk{
  position: fixed;
  top: 0;
  width: 100%;
  height: 1090rpx;
}
.user image{
  width: 100rpx;
  height: 100rpx;
}
.mine,.other{
  padding: 20rpx;
  display: flex;

}
.mine{
  /* justify-content: flex-end; */
  flex-direction: row-reverse;
}
.other{
  flex-direction: row;
  /* justify-content: flex-start; */
  align-items: flex-start;
}
.controls{
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  padding-left: 120rpx;
  display: flex;
  align-items: center;
  height: 10%;
  background-color: white;
}
.box{
  height: 600rpx;
}
.send{
  display: inline-block;
  padding: 20rpx 30rpx;
  /* height: 80%; */
  background-color: rgb(85, 157, 255);
  color: white;
  font-size: 34rpx;
  border-radius: 20rpx;
  min-width: 70rpx;
}
.mine-text-content,.other-text-content{
  padding: 20rpx;
  max-width: 60%;
  font-size: 30rpx;
}
.mine-text-content{
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  margin-right: 20rpx;
  color: white;
  background-color: rgb(85, 157, 255)
}
.other-text-content{
  margin-left: 20rpx;
  background-color: white;
  border-top-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  box-shadow: 1rpx 2rpx 3rpx 3rpx rgb(235, 235, 235);
}
.timer{
  text-align: center;
  padding: 10rpx 0;
}
.timer text{
  font-size: 28rpx;
  background-color: rgb(218, 218, 218);
  display: inline-block;
  padding: 10rpx 20rpx;
  color: rgb(241, 241, 241);
  border-radius: 30rpx;
}
