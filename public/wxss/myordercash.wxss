.container{
  width: 90%;
  height: 100%;
  overflow: hidden;
  margin: 0 auto;
  letter-spacing: 2rpx;
}
.btn-paid{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: rgb(255, 111, 111);
  background-color: white;
  border-radius: 4rpx;
  margin-top: 50rpx;
  box-shadow: 0 0 10rpx rgb(240,240,240);
}
.content-payfor{
  width: 100%;
  margin: 40rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.content-payfor-left{
  width: 400rpx;
  font-weight: 600;
}
.content-payfor-right{
  width: 160rpx;
  text-align: center;
}
.content-payfor-pic{
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}
.content-payfor-font{
  font-size: 28rpx;
  color: rgb(140,140,140);
}
.content-list{
  width: 100%;
  height: 50rpx;
  padding-bottom: 50rpx;
  font-size: 28rpx;
}
.content-list-left{
  float: left;
  color: rgb(88, 88, 88);
}
.content-list-right{
  float: right;
  color: rgb(140, 140, 140);
  font-weight: 400;
}


.content-list2{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  padding: 10rpx 0;
}
.content-list2-item{
  flex: 1;
  text-align: center;
  color: rgb(88, 88, 88);
}
.padding-bottom{
  padding-bottom:40rpx;
}
.pay-btn{
  width: 700rpx;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  margin-left: -350rpx;
  border-radius: 10rpx;
  background-color: rgb(255, 217, 62);
  outline: none;
  border: none;
}