/* pages/myorder/myorder.wxss */
page {
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.selectItem{
  width:100%;
  height:50px;
  box-shadow: 0 0 10px rgb(240,240,240);
}
.selectItem_son{
  width:50%;
  height:100%;
  float:left;
}
.son_text{
  width:100%;
  height:30px;
  text-align: center;
  line-height: 30px;
  font-size:15px;
  color:#333333;
  letter-spacing: 1px;
  font-weight: 800;
  margin-top:7px;
}
.son_textC{
  width:100%;
  height:30px;
  text-align: center;
  line-height: 30px;
  font-size:15px;
  color:gray;
  letter-spacing: 1px;
  font-weight: 800;
  margin-top:7px;
}
.son_text::after{
  content:"";
  width:20px;
  height:4px;
  display: block;
  background:rgb(255,217,62);
  position:relative;
  top:2px;
  left:50%;
  margin-left:-10px;
  border-radius: 2px;
}
.infoBox{
  width:94%;
  height:150px;
  margin:0 auto;
  /* background:green; */
  border-bottom:1px solid rgb(240,240,240)
}
.left{
  width:130px;
  height:130px;
  /* background:red; */
  margin-top:10px;
  float:left;
}
.pic{
  display: block;
  width:100%;
  height:100%;
  border-radius: 5px;
}
.right{
  height:130px;
  margin-top:10px;
  float:left;
}
.right_son{
  height:30px;
  font-size:16px;
  font-weight: 800;
  color:#333333;
  text-align: left;
  margin-left:10px;
  line-height: 30px;
  margin-top:12px;
  letter-spacing: 1px;
}